grammar org.xtext.example.landingpagedsl.LPDSL with org.eclipse.xtext.common.Terminals

generate lPDSL "http://www.xtext.org/example/landingpagedsl/LPDSL"

LandingPage:
	(pagecomponent+=PageComponent)*
;	

PageComponent:
	PageHeader | PageBody | PageFooter 
;

PictureCarousel:
	'carousel' name=ID '{'
		timer+=TimeSpecifier
		(picture+=Picture)*
	'}'
;
PageFooter:
	'footer' name=ID '{'
		(links+=LinkItem)*
	'}'
;

LinkItem:
	'link' name=ID '{'
		text+=Items
		link+=URL
	'}'
;

URL:
	name=ID ':' path+=QualifiedPath
;

QualifiedPath:
	value=STRING ('.' STRING)*
;

PageHeader:
	'header' name=ID '{'
		title+=Items
		(tabs+=TabItems)*
	'}'
;

TabItems:
	name=ID ':' description+=Description
;


PageBody:
	'body' name=ID '{'
		(sections+=Sections)*
	'}'
;

Sections:
	Resume | AboutMe | PictureCarousel | ContactInformation | Links
;

Links:
	'links' name=ID '{'
		(links+=LinkItem)*
	'}'
;

ContactInformation:
	'contactinfo' name=ID '{'
	'}'
;
Resume:
	'resume' name=ID '{'
		(resumeitems+=Items)*
	'}'
;

Items:
	name=ID ':' description+=Description
;

Description:
	value=STRING
;

TimeSpecifier:
	name=ID ':' time+=Integer
;

Integer:
	value=INT
;
AboutMe:
	'aboutme' name=ID '{'
		picture+=Picture
		description+=Items
	'}'
;

Picture:
	name=ID ':' imagepath+=ImagePath
;

ImagePath:
	value=STRING
;
