grammar org.xtext.example.landingpagedsl.LPDSL with org.eclipse.xtext.common.Terminals

generate lPDSL "http://www.xtext.org/example/landingpagedsl/LPDSL"

LandingPage:
	(pagecomponent+=PageComponent)*
;	

PageComponent:
	PageHeader | PageBody | PageFooter
;

PageBody:
	'body' name=ID '{'
		(sections+=Sections)*
	'}'
;

Sections:
	Resume | AboutMe
;

Resume:
	'resume' name=ID '{'
		(resumeitems+=Items)*
	'}'
;

Items:
	name=ID ':' description+=Description
;

Description:
	name=ID
;

AboutMe:
	'aboutme' name=ID '{'
		picture+=Picture
		description+=Description
	'}'
;

Picture:
	name=ImagePath
;

ImagePath:
	ID ('/' ID)* '.' (jpg|JPG|gif|GIF|doc|DOC|pdf|PDF)$
;

