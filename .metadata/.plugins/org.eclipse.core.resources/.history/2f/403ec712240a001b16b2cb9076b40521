grammar org.xtext.example.landingpagedsl.LPDSL with org.eclipse.xtext.common.Terminals

generate lPDSL "http://www.xtext.org/example/landingpagedsl/LPDSL"

LandingPage:
	(pagecomponent+=PageComponent)*
;	

PageComponent:
	PageHeader | PageBody | PageFooter
;

PageBody:
	'body' name=ID '{'
		(sections+=Sections)*
	'}'
;

Sections:
	Resume | other
;

Resume:
	'resume' name=ID '{'
		(resumeitems+=Items)*
	'}'
;


Items:
	name=ID ':' Description
;

Description:
	name=ID
;

resume SteinarsResume {
	name : Steinar
	job : resto
	job : research
	education : Highschool
	education : RU
	prjects : name-of-project
	
}