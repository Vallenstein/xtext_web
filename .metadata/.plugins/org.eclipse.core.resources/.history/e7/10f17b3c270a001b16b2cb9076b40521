grammar org.xtext.example.landingpagedsl.LPDSL with org.eclipse.xtext.common.Terminals

generate lPDSL "http://www.xtext.org/example/landingpagedsl/LPDSL"

LandingPage:
	(pagecomponent+=PageComponent)*
;	

PageComponent:
	PageHeader | PageBody | PageFooter
;

PageHeader:
	'header' name=ID '{'
		title+=Items
		(tabs+=Tabs)*
;

Tabs:
	name=ID ':' Description
;

header myheader {
	title : "THIS IS THE TITEL"
	tabs
	;
}


PageBody:
	'body' name=ID '{'
		(sections+=Sections)*
	'}'
;

Sections:
	Resume | AboutMe
;

Resume:
	'resume' name=ID '{'
		(resumeitems+=Items)*
	'}'
;

Items:
	name=ID ':' description+=Description
;

Description:
	name=ID
;

AboutMe:
	'aboutme' name=ID '{'
		picture+=Picture
		description+=Items
	'}'
;

Picture:
	name=ID ':' imagepath+=ImagePath
;

ImagePath:
	ID ('/' ID)* '.' ('jpg' | 'JPG' | 'jpeg' | 'JPEG' | 'png' | 'PNG')
;
